<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RespectNew" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:textColor">@color/text_color</item>
        <item name="android:colorPrimary">@color/text_color</item>
        <item name="android:colorPrimaryDark">@color/text_color</item>
        <!-- Default font family -->
        <item name="android:fontFamily">@font/dubai</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Default text appearance -->
        <item name="android:textAppearance">@style/DefaultTextAppearance</item>
    </style>

    <style name="Theme.RespectNew" parent="Base.Theme.RespectNew" />

    <style name="DefaultTextAppearance">
        <item name="android:fontFamily">@font/dubai</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">@font/dubai</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>